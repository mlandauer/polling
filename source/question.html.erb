---
title: Political Survey
---

<div class="container">
  <p><%= no %> of 75</p>

  <% form_tag "/question#{no+1}.html", method: 'get' do %>
    <fieldset>
      <legend><%= data.questions[no-1] %></legend>
      <div class="radio">
        <label>
          <%= radio_button_tag('agreement', value: '-2') %>
          Disagree strongly
        </label>
      </div>
      <div class="radio">
        <label>
          <%= radio_button_tag('agreement', value: '-1') %>
          Disagree
        </label>
      </div>
      <div class="radio">
        <label>
          <%= radio_button_tag('agreement', value: '0') %>
          No opinion
        </label>
      </div>
      <div class="radio">
        <label>
          <%= radio_button_tag('agreement', value: '1') %>
          Agree
        </label>
      </div>
      <div class="radio">
        <label>
          <%= radio_button_tag('agreement', value: '2') %>
          Agree strongly
        </label>
      </div>
    </fieldset>
    <button type="submit" class="btn btn-default">Next</button>
  <% end %>
</div>
